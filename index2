<body>
  <h2>Unsafe Video Demo</h2>
  <p class="hint">This page renders the video with an “unsafe” visual overlay. Use DevTools to remove the overlay or call <code>makeSafe()</code> from the Console.</p>

  <div class="wrap unsafe" id="container">
    <!-- Replace the src value below with your video URL -->
    <video id="demoVideo" src="vid1.mp4" playsinline preload="metadata" muted></video>

    <div class="overlay" id="overlay">
      <div class="panel">
        ⚠️ Marked as <strong>UNSAFE</strong><br/>
        (open DevTools → Console and run <pre>makeSafe()</pre>)
      </div>
    </div>
  </div>

  <p class="hint">Quick DevTools commands:</p>
  <pre>document.getElementById('container').classList.remove('unsafe');
document.getElementById('overlay')?.remove();
const v = document.getElementById('demoVideo'); v.controls = true; v.muted=false; v.play();</pre>

  <script>
    // Helper: make it safe programmatically (call from Console)
    function makeSafe() {
      const c = document.getElementById('container');
      const o = document.getElementById('overlay');
      const v = document.getElementById('demoVideo');
      c.classList.remove('unsafe');
      if (o) o.remove();
      v.controls = true;
      try { v.muted = false; } catch(e){}
      v.play().catch(()=>{/* may require user gesture for autoplay with sound */});
      console.log('Video made safe (overlay removed, controls enabled).');
    }

    // small UX: try to load poster then pause so user can click play manually
    const v = document.getElementById('demoVideo');
    v.pause();
  </script>
</body>
</html>
